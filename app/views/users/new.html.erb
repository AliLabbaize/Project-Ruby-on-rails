


<img class="mb-4" src="https://lingrolearning.com/wp-content/uploads/2018/03/Playing-to-learn_thumb46.jpg" style="padding-left: 380px;"  width="70%" height = "70%"">

<div class = "container" style="padding-top: 50px; padding-left: 80px;">
    <% if @user.errors.any?%>
        <div class="alert alert-danger">
            <ul>
                <% @user.errors.full_messages.each do |message|%>
                    <li><%=message%></li>
                <%end%>
            </ul>
        </div>
    <%end%>


    <div  class="panel panel-default" >
        <div class="panel-heading"><p style = "font-family:georgia,garamond,serif;font-size:30px;font-style:italic;">
         SIGN UP</p></div>
            <div class="panel-body">
                <%= form_for @user, html: {class:'form-horizontal'} do |f|%>
                    
                    <div class="form-group">
                        <%= f.label :firstname, "First Name", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.text_field :firstname,  class:'form-control'%>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :last_name, "Last Name", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.text_field :last_name,  class:'form-control'%>
                        </div>
                    </div>


                    <div class="form-group">
                        <%= f.label :level_english, "Your English level", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.select :level_english, options_for_select(["Beginner", "Intermediate", "Advanced ", "Proficient ", "Fluent"]), class:'form-control'%>         
                        </div>
                    </div>


                    <div class="form-group">
                        <%= f.label :user_name, "User Name", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.text_field :user_name,  class:'form-control'%>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :mail, "E-mail", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.email_field :mail,  class:'form-control'%>
                        </div>

                    </div>

                    <div class="form-group">
                        <%= f.label :password, "Password", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.password_field :password,  class:'form-control'%>
                        </div>
                                            </div>


                      <div class="form-group">
                        <%= f.label :password_confirmation, "Password Confirmation", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.password_field :password_confirmation,  class:'form-control'%>
                           
                        </div>

                        <div class="form-group" style="padding-top: 50px;">
                            <div class="col-md-offset-4 col-md-6">
                                <button type="Submit" class="btn btn-primary">
                                    Submit
                                </button>
                            </div>
                        </div>
                    </div>

                <%end%>
            </div>
        </div>
    </div>
</div>