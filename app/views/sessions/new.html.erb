    <div  class="panel panel-default" >
        <div class="panel-heading"><p style = "font-family:georgia,garamond,serif;font-size:30px;font-style:italic;">
         Log In</p></div>
            <div class="panel-body">
                <%= form_for :users ,url: sessions_path, html: {class:'form-horizontal'} do |f|%>

                    <div class="form-group">
                        <%= f.label :username, "E-mail or Username", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.text_field :username,  class:'form-control'%>
                        </div>

                    </div>

                    <div class="form-group">
                        <%= f.label :password, "Password", class: 'col-md-4 control-label' %>
                        <div class="col-md-6">
                            <%=f.password_field :password,  class:'form-control'%>
                        </div>
                    </div>

                        <div class="form-group" style="padding-top: 50px;">
                            <div class="col-md-offset-4 col-md-6">
                                <button type="Submit" class="btn btn-primary">
                                    Connect
                                </button>
                            </div>
                        </div>
                    </div>

                <%end%>
            </div>
        </div>
    </div>
</div>



